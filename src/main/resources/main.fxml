<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javateam.controller.MainController"
            stylesheets="@style.css"
            prefWidth="1200"
            prefHeight="750">

    <!-- ===== TOP TITLE ===== -->
    <top>
        <VBox alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #1f3c88, #0f2027);"
              prefHeight="120">

            <Label text="Contact Management Application"
                   style="-fx-font-size: 32px;
                          -fx-text-fill: white;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0.5, 0, 2);"/>
        </VBox>
    </top>

    <!-- ===== CENTER TABLE ===== -->
    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="personTable" prefHeight="500">

                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="firstNameColumn" text="Firstname" prefWidth="130"/>
                    <TableColumn fx:id="lastNameColumn" text="Lastname" prefWidth="130"/>
                    <TableColumn fx:id="nicknameColumn" text="Nickname" prefWidth="120"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="addressColumn" text="Address" prefWidth="180"/>
                    <TableColumn fx:id="birthDateColumn" text="Birth Date" prefWidth="120"/>
                </columns>

            </TableView>
        </VBox>
    </center>

    <!-- ===== BOTTOM FORM ===== -->
    <bottom>
        <VBox spacing="20">
            <padding>
                <Insets top="25" bottom="30" left="40" right="40"/>
            </padding>

            <GridPane hgap="25" vgap="20">

                <!-- Row 1 -->
                <Label text="Firstname:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="firstnameField"
                           promptText="Enter firstname"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nickname:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="nicknameField"
                           promptText="Enter nickname"
                           GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- Row 2 -->
                <Label text="Lastname:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="lastnameField"
                           promptText="Enter lastname"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="phoneField"
                           promptText="Enter phone number"
                           GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- Row 3 -->
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField"
                           promptText="Enter email"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="addressField"
                           promptText="Enter address"
                           GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- Row 4 -->
                <Label text="Birth Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="birthDatePicker"
                            GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            </GridPane>

            <!-- Buttons -->
            <HBox spacing="25" alignment="CENTER">
                <Button text="Add" fx:id="addButton"/>
                <Button text="Update" fx:id="updateButton"/>
                <Button text="Delete" fx:id="deleteButton"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>