<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javateam.controller.MainController">

    <top>
        <Label text="Person CRUD Application"
               style="-fx-font-size: 20px; -fx-padding: 10;"/>
    </top>

    <center>
        <TableView fx:id="personTable">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colFirstname" text="Firstname"/>
                <TableColumn fx:id="colLastname" text="Lastname"/>
                <TableColumn fx:id="colNickname" text="Nickname"/>
                <TableColumn fx:id="colPhone" text="Phone"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5" style="-fx-padding: 10;">
            <HBox spacing="5">
                <TextField fx:id="txtFirstname" promptText="Firstname"/>
                <TextField fx:id="txtLastname" promptText="Lastname"/>
                <TextField fx:id="txtNickname" promptText="Nickname"/>
                <TextField fx:id="txtPhone" promptText="Phone"/>
            </HBox>

            <HBox spacing="5">
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>